{
  "name": "lolli/dbdoctor",
  "type": "typo3-cms-extension",
  "description": "TYPO3 Database doctor - Find and fix TYPO3 database inconsistencies",
  "homepage": "https://github.com/lolli42/dbdoctor",
  "authors": [
    {
      "name": "Christian Kuhn",
      "role": "Developer"
    }
  ],
  "license": [
    "GPL-2.0-or-later"
  ],
  "require": {
    "php": "^8.1",
    "typo3/cms-core": "^12.4 || ^13.4"
  },
  "config": {
    "sort-packages": true,
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin",
    "allow-plugins": {
      "typo3/class-alias-loader": true,
      "typo3/cms-composer-installers": true
    }
  },
  "require-dev": {
    "bnf/phpstan-psr-container": "^1.1",
    "friendsofphp/php-cs-fixer": "^3.68.5",
    "friendsoftypo3/phpstan-typo3": "^0.9.0",
    "phpstan/phpstan": "^1.12.18",
    "phpstan/phpstan-phpunit": "^1.4.2",
    "phpunit/phpunit": "^10 || ^11",
    "typo3/cms-impexp": "^12.4 || ^13.4",
    "typo3/cms-redirects": "^12.4 || ^13.4",
    "typo3/cms-workspaces": "^12.4 || ^13.4",
    "typo3/testing-framework": "^8.2.7"
  },
  "autoload": {
    "psr-4": {
      "Lolli\\Dbdoctor\\": "Classes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lolli\\Dbdoctor\\Tests\\": "Tests/"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-main": "1.x-dev"
    },
    "typo3/cms": {
      "app-dir": ".Build",
      "web-dir": ".Build/Web",
      "extension-key": "dbdoctor"
    }
  }
}
